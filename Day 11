def stringPermutations(s):
    chars = sorted(list(s))   # sort so duplicates can be skipped
    n = len(chars)
    used = [False] * n
    result = []

    def backtrack(path):
        if len(path) == n:
            result.append("".join(path))
            return
        for i in range(n):
            if used[i]:
                continue
            # avoid duplicate permutations
            if i > 0 and chars[i] == chars[i-1] and not used[i-1]:
                continue
            used[i] = True
            path.append(chars[i])
            backtrack(path)
            path.pop()
            used[i] = False

    backtrack([])
    return result


# some quick tests
print(stringPermutations("abc"))
print(stringPermutations("aab"))
print(stringPermutations("aaa"))
print(stringPermutations("a"))
